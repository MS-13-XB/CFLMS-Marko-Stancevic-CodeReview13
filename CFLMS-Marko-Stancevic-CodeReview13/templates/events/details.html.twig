
{% extends 'base.html.twig' %}
{% block body %}
       
      <div class="container">
        <div class="card">
          <img class="card-img-top" src="{{ event.image }}" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">{{ event.name }}</h5>
            <p class="card-text">date: <strong> {{event.date|date('F j, Y, g:i a')}} </strong></p>
            <p class="card-text">{{event.description}}</p>
            <p class="card-text">Capacity: {{ event.capacity }}</p>
            <p class="card-text">Contact Information:</p>
            <p class="card-text"> -email: {{ event.contactEmail }}</p>
            <p class="card-text"> -Phone Number: {{ event.contactPhoneNumber }}</p>
            <p class="card-text">address: {{ event.address }}</p>
            <p class="card-text">URL: {{ event.url }}</p>
            <p class="card-text">Type: {{ event.type }}</p>
            <a href="/" class="btn btn-primary">back to the events</a>
          </div>
        </div>
      </div>
{% endblock %}


