{% extends 'base.html.twig' %}

{% block title %}Welcome Customer ! {% endblock %}

{% block body %}

<div class="container">
	<div class="row">

	{% for event in events %} {# making a loop in twig inside the variable todos #}

  	<div class='card col-4 '>
	  <img class="card-img-top" src="{{ event.image }}" alt="Card image cap">
	  <div class="card-body">
	    <h5 class="card-title">{{event.name}}</h5>
	    {# <p class="card-text">{{event.description}}</p> #}
	    <p class="card-text">{{event.date|date('F j, Y, g:i a')}}</p>
	    <a href="/details/{{event.id}}" class="btn btn-success">View</a>
	    <a href="/edit/{{event.id}}" class="btn btn-primary">Edit</a>
	    <a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>
	  </div>
	</div>

	{% endfor %}

</div>
</div>

{% endblock %}
